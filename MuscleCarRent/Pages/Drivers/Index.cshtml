@page
@using MuscleCarRentProject.Core.Extensions
@model MuscleCarRentProject.Pages.DriversPage

@{
    ViewData["Page"] = "Drivers";
    Layout = "Shared/_Index";
}

<table class="table">
    <thead>
        <tr>
            @Html.TableHeader(x => x.Item.Id)
            @Html.TableSortHeader(x => x.Item.FirstName, Model)
            @Html.TableSortHeader(x => x.Item.LastName, Model)
            @Html.TableHeader(x => x.Item.PersonPhotoAsString)
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            @Html.RowData(x => item.Id)
            @Html.RowData(x => item.FirstName)
            @Html.RowData(x => item.LastName)
            @Html.RowImage(item.PersonPhotoAsString)
            @Html.RowButtons(Model.PageUrl, $"{item.Id}")
        </tr>
    }
    </tbody>
</table>