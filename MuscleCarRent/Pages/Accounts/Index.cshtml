@page
@using MuscleCarRentProject.Core.Extensions
@model MuscleCarRentProject.Pages.AccountsPage

@{
    ViewData["Page"] = "Accounts";
    Layout = "Shared/_Index";
}

<table class="table">
    <thead>
        <tr>
            @Html.TableSortHeader(x => x.Item.Username, Model);
            @Html.TableSortHeader(x => x.Item.FirstName, Model);
            @Html.TableSortHeader(x => x.Item.LastName, Model);
            @Html.TableHeader(x => x.Item.PhotoAsString);
            @Html.TableHeader(x => x.Item.RegistrationDate);
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
        <tr>
            @Html.RowData(x => item.Username)
            @Html.RowData(x => item.FirstName)
            @Html.RowData(x => item.LastName)
            @Html.RowImage(item.PhotoAsString)
            @Html.RowData(x => item.RegistrationDate)
            @Html.RowButtons(Model.PageUrl, $"{item.Id}")
        </tr>
        }
    </tbody>
</table>