@page
@using MuscleCarRentProject.Core.Extensions
@model MuscleCarRentProject.Pages.CarsPage

@{
    ViewData["Page"] = "Cars";
    Layout = "Shared/_Index";
}

<table class="table">
    <thead>
        <tr>
            @Html.TableSortHeader(x => x.Item.Brand, Model)
            @Html.TableSortHeader(x => x.Item.Model, Model)
            @Html.TableSortHeader(x => x.Item.BodyType, Model)
            @Html.TableSortHeader(x => x.Item.Color, Model)
            @Html.TableSortHeader(x => x.Item.Engine , Model)
            @Html.TableSortHeader(x => x.Item.Power , Model)
            @Html.TableSortHeader(x => x.Item.ProductionYear, Model)
            @Html.TableSortHeader(x => x.Item.ShortDescription, Model)
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            @Html.RowData(x => item.Brand)
            @Html.RowData(x => item.Model)
            @Html.RowData(x => item.BodyType)
            @Html.RowData(x => item.Color)
            @Html.RowData(x => item.Engine)
            @Html.RowData(x => item.Power)
            @Html.RowData(x => item.ProductionYear)
            @Html.RowData(x => item.ShortDescription)
            @Html.RowButtons(Model.PageUrl, $"{item.ID}")
        </tr>
    }
    </Tbody>
</table>