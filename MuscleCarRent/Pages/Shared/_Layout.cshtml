    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body >
    <style>
        header {
            background-color: #A9A9A9 ;
            color: #17252A;
            font-family: Verdana;
        }

        p {
            color: #3D3D3D;
            font-family: Verdana;
        }

        footer {
          
            background-color: #A9A9A9;
            font-size: 12px;
            color: slategray;
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 8.5rem; /* Footer height */
        }

        label.form-check-label{
            color: black;
        }
        #page-container {
            position: relative;
            min-height: 100vh;
        }
        #content-wrap {
            padding-bottom: 8.5rem; /* Footer height */
        }
        .open .nav-link {
            color: #fff;
            background-color:transparent;
        }
        .dropdown-menu li a {
            color: #000 !important;
        }
        .dropdown-menu {
            background-color: #A9A9A9;
